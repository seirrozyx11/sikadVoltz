{
  "name": "sikadvoltz_backend",
  "version": "1.0.0",
  "description": "Backend for SikadVoltz cycling training application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --inspect index.js",
    "ble-bridge": "node services/esp32_ble_bridge.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "redis:up": "docker-compose -f docker-compose.redis.yml up -d",
    "redis:down": "docker-compose -f docker-compose.redis.yml down",
    "redis:setup": "node scripts/redis-setup.js",
    "redis:test": "node scripts/redis-health-check.js",
    "redis:monitor": "docker-compose -f docker-compose.redis.yml exec redis redis-cli monitor",
    "db:indexes": "node scripts/add-critical-indexes.js",
    "apm:setup": "node scripts/setup-apm.js",
    "firebase:setup": "node scripts/setup-firebase.js",
    "test:fcm": "cross-env NODE_ENV=development node scripts/test-fcm.js",
    "test:fcm:live": "node scripts/test-fcm-live.js",
    "verify:production": "node scripts/verify-production-ready.js",
    "optimize:setup": "node scripts/performance-optimization-setup.js",
    "optimize:indexes": "node -e \"import('./services/databaseIndexManager.js').then(m => m.DatabaseIndexManager.createOptimizedIndexes())\"",
    "optimize:cache-test": "node -e \"import('./services/enhancedCacheService.js').then(m => m.default.getCacheStatistics().then(console.log))\"",
    "indexes:basic": "node scripts/create-basic-indexes.js",
    "dashboard:test": "curl -H 'Authorization: Bearer YOUR_JWT_TOKEN' http://localhost:3000/api/v1/dashboard/home",
    "render:optimize": "node scripts/render-optimizer.js",
    "render:check": "node scripts/render-optimizer.js"
  },
  "keywords": [
    "cycling",
    "training",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "SikadVoltz Team",
  "license": "MIT",
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.5.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "multer": "^1.4.5-lts.1",
    "newrelic": "^13.4.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "redis": "^4.7.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^30.2.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.4",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
